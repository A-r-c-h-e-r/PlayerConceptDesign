<Page x:Class="PlayerConceptDesign.View.Menu.Playlist"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PlayerConceptDesign"
      xmlns:viewmodel="clr-namespace:PlayerConceptDesign.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Playlist">

    <Page.DataContext>
        <viewmodel:SetColorTheme/>
    </Page.DataContext>

    <Grid Margin="10,0,0,0">
        <Label Content="{x:Static local:Localization.Playlist}" FontSize="25" FontStretch="Medium" Foreground="{Binding colorsTheme.ColorForeground, Mode=TwoWay}"/>
    </Grid>
</Page>
